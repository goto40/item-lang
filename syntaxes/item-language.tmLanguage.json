{
  "name": "item-language",
  "scopeName": "source.item-language",
  "fileTypes": [
    ".item",
    ".msg"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.item-language",
      "match": "\\b(Hello|person)\\b"
    },
    {
      "name": "string.quoted.double.item-language",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.item-language",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.item-language",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.item-language"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.item-language"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.item-language"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.item-language"
        }
      ]
    }
  }
}